@model IEnumerable<BankAccountOpeningForm.Models.AccountOpeningForm>

@{
    ViewData["Title"] = "Account Opening Form List";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Form Number</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Age</th>
            <th>Mobile No</th>
            <th>Email ID</th>
            <th>Branch</th>
            <th>Type of Account</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FormNumber</td>
                <td>@item.CustFirstName</td>
                <td>@item.CustMiddleName</td>
                <td>@item.CustLastName</td>
                <td>@item.CustSex</td>
                <td>@item.CustAge</td>
                <td>@item.CustMobile</td>
                <td>@item.CustEmailId</td>
                <td>@item.CustBranchCode</td>
                <td>@item.CustAccountType</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">New</a>
<a asp-action="Quit" class="btn btn-danger">Quit</a>
